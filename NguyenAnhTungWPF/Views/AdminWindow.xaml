<Window x:Class="NguyenAnhTungWPF.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenAnhTungWPF.Views"
        mc:Ignorable="d"
        Title="Admin Dashboard - FUMiniHotelSystem" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">

            <!-- Tab Quản lý Khách hàng -->
            <TabItem Header="Customer Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CUSTOMER MANAGEMENT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Search by Name:"/>
                        <TextBox Width="200" VerticalContentAlignment="Center" Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Search" Margin="10,0,0,0" Padding="10,0" Command="{Binding SearchCustomerCommand}"/>

                        <Button Content="Add New" Margin="50,0,0,0" Padding="10,0" Command="{Binding AddCustomerCommand}"/>
                        <Button Content="Update Selected" Margin="10,0,0,0" Padding="10,0" Command="{Binding UpdateCustomerCommand}"/>
                        <Button Content="Delete Selected" Margin="10,0,0,0" Padding="10,0" Command="{Binding DeleteCustomerCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" 
                              ItemsSource="{Binding Customers}" 
                              SelectedItem="{Binding SelectedCustomer}"
                              IsReadOnly="True" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="100"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="120"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="*"/>
                            <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Quản lý Phòng -->
            <TabItem Header="Room Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ROOM MANAGEMENT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Search by Room :"/>
                        <TextBox Width="150" VerticalContentAlignment="Center" Text="{Binding RoomSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Search" Margin="10,0,0,0" Padding="10,0" Command="{Binding SearchRoomCommand}"/>

                        <Button Content="Add New" Margin="50,0,0,0" Padding="10,0" Command="{Binding AddRoomCommand}"/>
                        <Button Content="Update Selected" Margin="10,0,0,0" Padding="10,0" Command="{Binding UpdateRoomCommand}"/>
                        <Button Content="Delete Selected" Margin="10,0,0,0" Padding="10,0" Command="{Binding DeleteRoomCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False"
                              ItemsSource="{Binding Rooms}"
                              SelectedItem="{Binding SelectedRoom}"
                              IsReadOnly="True" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room ID" Binding="{Binding RoomId}" Width="80"/>
                            <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding RoomDetailDescription}" Width="*"/>
                            <DataGridTextColumn Header="Max Capacity" Binding="{Binding RoomMaxCapacity}" Width="100"/>
                            <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType.RoomTypeName}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding RoomStatus}" Width="80"/>
                            <DataGridTextColumn Header="Price/Day" Binding="{Binding RoomPricePerDay, StringFormat='C'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Quản lý Đặt phòng -->
            <TabItem Header="Booking Management">
                <Grid Margin="10">
                    <DataGrid AutoGenerateColumns="False" CanUserAddRows="False"
                              ItemsSource="{Binding Bookings}"
                              SelectedItem="{Binding SelectedBooking}"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Báo cáo -->
            <TabItem Header="Statistics &amp; Reports">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="REVENUE REPORT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Label Content="Start Date:"/>
                        <DatePicker Width="150" SelectedDate="{Binding ReportStartDate}"/>
                        <Label Content="End Date:" Margin="20,0,0,0"/>
                        <DatePicker Width="150" SelectedDate="{Binding ReportEndDate}"/>
                        <Button Content="Generate Report" Margin="20,0,0,0" Padding="10,0" Command="{Binding GenerateReportCommand}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              ItemsSource="{Binding ReportResults}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                            <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Nút Đăng xuất -->
        <Button Grid.Row="1" Content="Logout" Command="{Binding LogoutCommand}" 
                HorizontalAlignment="Right" Padding="15,5" Margin="0,10,0,0"/>
    </Grid>
</Window>